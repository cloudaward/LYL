<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="@color/primary_color"
    android:padding="@dimen/actionbar_padding" >

    <!-- Center location view -->

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableEnd="@drawable/ic_expand"
        android:drawableRight="@drawable/ic_expand"
        android:gravity="center"
        android:text="@string/location"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <!-- Left home image view -->

    <ImageView
        android:id="@+id/iv_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:background="@drawable/actionbar_button_selector"
        android:gravity="center"
        android:src="@drawable/ic_home" />

    <!-- Right add image view -->

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/actionbar_button_selector"
        android:contentDescription="@null"
        android:gravity="center"
        android:src="@drawable/ic_add" />

</RelativeLayout>